using System;

namespace Sololearn
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Enter a traffic light color: ");
            string color = Console.ReadLine();
            if (color == "red" | color == "yelow")
            {
                Console.WriteLine("The driver must wait: ");
            }
            else if (color == "green")
            {
                Console.WriteLine("The driver must drive: ");
            }
            else
            {
                Console.WriteLine("Non traffic lights color: ");
            }
        }
    }
}
